<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Edu Manage for Senate</title>
  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/css-main.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <% include ./sidebar %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./topbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Special Lecture</h1>
          </div>

          <div class="row">
            <!-- Area Chart -->
            <div class="col-xl-12">
              <div class="shadow mb-4">
                <!-- Card Header - Dropdown -->
                <table class="table table-striped table-bordered table-hover">
                  <thead style="font-size: 17px;">
                    <tr>
                      <th>Courses</th>
                      <th>Duration</th>
                      <th>Date</th>
                      <th>Hours</th>
                      <th>Trainers</th>
                      <th>Course Managers</th>
                      <th>Course Facilitators</th>
                    </tr>
                  </thead>
                  <tbody style="font-size: 12px;">
                    <% if(courses == null || courses.length == 0){ %>
                    <tr class="noData">
                      <td colspan="8" style="text-align: center; font-size: 15px;">There is no course to show.</td>
                    </tr>
                    <% } %>
                    <% courses.forEach(function(courses){ %>
                    <tr>
                      <td><%= courses.courses %></td>
                      <td> <%= courses.duration %></td>
                      <td> <%= courses.date %></td>
                      <td> <%= courses.hours %></td>
                      <td> <%= courses.trainers %></td>
                      <td> <%= courses.courses_managers %></td>
                      <td> <%= courses.courses_facilitators %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
                <!-- Card Body -->
              </div>
            </div>
            <!-- Pie Chart -->
          </div>
        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright 2019. Senate of Cambodia</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="js/script-main.js"></script>
</body>

</html>