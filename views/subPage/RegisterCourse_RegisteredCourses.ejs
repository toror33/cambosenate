<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Edu Manage for Senate</title>
  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/css-main.css" rel="stylesheet">
  <script>
    function deleteAjax(course, level) {
      $.ajax({
        url: "/deleteRegisteredCourses",
        type: "POST",
        data: { course: course, level: level },
        success: function (data) {
          alert("Course Name '" + course + "' Deleted!");
          window.location.href = '/registeredCourses';
        }
      });
    }
  </script>
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <% include ./sidebar %>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./topbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Registered Courses</h1>
          </div>
          <div class="row">
            <!-- Area Chart -->
            <div class="col-xl-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Basic course</h6>
                </div>
                <div class="card-body">
                  <table class="table table-striped table-bordered table-hover">
                    <thead style="font-size: 14px;">
                      <tr>
                        <th>Courses</th>
                        <th>Duration</th>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Trainers</th>
                        <th>Course Managers</th>
                        <th>Course Facilitators</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody style="font-size: 11px;">
                      <% if(coursesBasic == null || coursesBasic.length == 0){ %>
                      <tr class="noData">
                        <td colspan="8" style="text-align: center; font-size: 15px;">There is no course to show.</td>
                      </tr>
                      <% } %>
                      <% coursesBasic.forEach(function(coursesBasic){ %>
                      <tr>
                        <td><%= coursesBasic.courses %></td>
                        <td> <%= coursesBasic.duration %></td>
                        <td> <%= coursesBasic.date %></td>
                        <td> <%= coursesBasic.hours %></td>
                        <td> <%= coursesBasic.trainers %></td>
                        <td> <%= coursesBasic.courses_managers %></td>
                        <td> <%= coursesBasic.courses_facilitators %></td>
                        <td>
                          <a href="#" onclick="deleteAjax('<%= coursesBasic.courses %>', 'basic')" style="font-size: 11px;"
                            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right"><i
                              class="fas fa-plus"></i> Delete</a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
                <!-- Card Body -->
              </div>
            </div>
            <!-- Pie Chart -->
          </div>


          <div class="row">
            <!-- Area Chart -->
            <div class="col-xl-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Advanced course</h6>
                </div>
                <div class="card-body">
                  <table class="table table-striped table-bordered table-hover">
                    <thead style="font-size: 14px;">
                      <tr>
                        <th>Courses</th>
                        <th>Duration</th>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Trainers</th>
                        <th>Course Managers</th>
                        <th>Course Facilitators</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody style="font-size: 11px;">
                      <% if(coursesAdvanced == null || coursesAdvanced.length == 0){ %>
                      <tr class="noData">
                        <td colspan="8" style="text-align: center; font-size: 15px;">There is no course to show.</td>
                      </tr>
                      <% } %>
                      <% coursesAdvanced.forEach(function(coursesAdvanced){ %>
                      <tr>
                        <td><%= coursesAdvanced.courses %></td>
                        <td> <%= coursesAdvanced.duration %></td>
                        <td> <%= coursesAdvanced.date %></td>
                        <td> <%= coursesAdvanced.hours %></td>
                        <td> <%= coursesAdvanced.trainers %></td>
                        <td> <%= coursesAdvanced.courses_managers %></td>
                        <td> <%= coursesAdvanced.courses_facilitators %></td>
                        <td>
                          <a href="#" onclick="deleteAjax('<%= coursesAdvanced.courses %>', 'advanced')"
                            style="font-size: 11px;"
                            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right"><i
                              class="fas fa-plus"></i>Delete</a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>

                  </table>
                </div>
                <!-- Card Body -->
              </div>
            </div>
            <!-- Pie Chart -->
          </div>

          <div class="row">
            <!-- Area Chart -->
            <div class="col-xl-12">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Special lecture</h6>
                </div>
                <div class="card-body">
                  <table class="table table-striped table-bordered table-hover">
                    <thead style="font-size: 14px;">
                      <tr>
                        <th>Courses</th>
                        <th>Duration</th>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Trainers</th>
                        <th>Course Managers</th>
                        <th>Course Facilitators</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody style="font-size: 11px;">
                      <% if(coursesSpecial == null || coursesSpecial.length == 0){ %>
                      <tr class="noData">
                        <td colspan="8" style="text-align: center; font-size: 15px;">There is no course to show.</td>
                      </tr>
                      <% } %>
                      <% coursesSpecial.forEach(function(coursesSpecial){ %>
                      <tr>
                        <td><%= coursesSpecial.courses %></td>
                        <td> <%= coursesSpecial.duration %></td>
                        <td> <%= coursesSpecial.date %></td>
                        <td> <%= coursesSpecial.hours %></td>
                        <td> <%= coursesSpecial.trainers %></td>
                        <td> <%= coursesSpecial.courses_managers %></td>
                        <td> <%= coursesSpecial.courses_facilitators %></td>
                        <td>
                          <a href="#" onclick="deleteAjax('<%= coursesSpecial.courses %>', 'special')"
                            style="font-size: 11px;"
                            class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm float-right"><i
                              class="fas fa-plus"></i> Delete</a>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>

                  </table>
                </div>
                <!-- Card Body -->
              </div>
            </div>
            <!-- Pie Chart -->

          </div>

        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright 2019. Senate of Cambodia</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="js/script-main.js"></script>
</body>

</html>