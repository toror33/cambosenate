<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>Edu Manage for Senate</title>

  <!-- Custom fonts for this template-->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="/css/css-main.css" rel="stylesheet">

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <% include ./admin_sidebar %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ./admin_topbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <div class="row" style="margin-left: 22px;">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-0 text-gray-800">News</h1>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary" style="margin-left: 10px;"><%=goods.title%></h6>
                </div>
                <div class="card-body" style="min-height:250px;">
                  <div class="d-sm-flex mb-4">
                    <div style="font-size: 15px; margin-left: 10px;"><%=goods.contents%></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row justify-content-end" style="margin-right: 20px;">
            <div class="d-flex" style="margin-left: 10px;">
              <a href="/admin/news/edit/<%=goods.no%>" class="btn btn-primary pull-right">Update</a>
            </div>
            <div class="d-flex" style="margin-left: 10px;">
              <form action="/admin/news/delete/<%=goods.no%>" method='post'>
                <div class="d-flex justify-content-end" style="display:inline;">
                  <input type="submit" class="btn btn-primary pull-right" value="Delete"
                    onclick="history.foward(+1);" />
                </div>
              </form>
            </div>
          </div>

        </div>

        <div class="row">
          <div class="col-sm-4"></div>
          <div class="col-sm-4" style="text-align:center;">
            <a href="/admin/news" class="d-sm-inline-block btn btn-primary shadow-sm">Go to List</a>
          </div>
          <div class="col-sm-4"></div>
        </div>
        
      </div>

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright 2019. Senate of Cambodia</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->

  </div>
  <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/script-main.js"></script>

</body>

</html>