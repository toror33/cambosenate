<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <script>
        var ta_admissions = "test"
    </script>

    <title>Edu Manage for Senate</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/css-main.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <% include ./admin_sidebar %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <% include ./admin_topbar %>

                <!-- Begin Page Content -->
                <div class="container">
                    <form id="create_course_form" method="post" action="/admin/special_lecture/add">
                        <!--action 지정-->
                        <fieldset>
                            <legend>Add Course</legend>
                            <br>
                            <div class="form-group">
                                <label for="c_name">Course Name</label>
                                <input class="form-control" id="c_name" name="c_name" maxlength="2048"
                                    style="height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="c_duration">Duration</label>
                                <input class="form-control" id="c_duration" name="c_duration" maxlength="2048"
                                    style="height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="c_date">Date</label>
                                <input class="form-control" id="c_date" name="c_date" maxlength="2048"
                                    placeholder="DD/MM/YYYY - DD/MM/YYYY" style="height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="c_hours">Hours</label>
                                <input class="form-control" id="c_hours" name="c_hours" maxlength="2048"
                                    style="height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="c_trainer">Trainer</label>
                                <input class="form-control" id="c_trainer" name="c_trainer" maxlength="2048"
                                    style="height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="c_courseManager">Course Manager</label>
                                <input class="form-control" id="c_courseManager" name="c_courseManager" maxlength="2048"
                                    style="height: auto;" />
                            </div>
                            <div class="form-group">
                                <label for="c_courseFacilitator">Course Facilitators</label>
                                <input class="form-control" id="c_courseFacilitator" name="c_courseFacilitator"
                                    maxlength="2048" style="height: auto;" />
                            </div>
                            <br>
                            <div class="d-flex justify-content-end">
                                <input type="submit" class="btn btn-primary pull-right" value="Done"
                                    onclick="history.foward(+1);" />
                            </div>
                        </fieldset>
                    </form>
                </div>

            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/script-main.js"></script>

    <script type="text/javascript">
            (function () {
                $(document).ready(function () {
                    $('#create_course_form').submit(function () {
                        var $courseNameInput = $('#create_course_form input[name=c_name]');
                        var $courseDurationInput = $('#create_course_form input[name=c_duration]');
                        var $courseDateInput = $('#create_course_form input[name=c_date]');
                        var $courseHoursInput = $('#create_course_form input[name=c_hours]');
                        var $courseTrainerInput = $('#create_course_form input[name=c_trainer]');
                        var $courseManagerInput = $('#create_course_form input[name=c_courseManager]');
                        var $courseFacilitatorInput = $('#create_course_form input[name=c_courseFacilitator]');

                        // 포커스시 label 숨기기
                        $courseDateInput.on('focus', function () {
                            $(this).siblings('placeholder').fadeOut('fast');
                        });

                        if (!$courseNameInput.val()) {
                            alert("Enter All Information!");
                            $courseNameInput.focus();
                            return false;
                        }
                        if (!$courseDurationInput.val()) {
                            alert("Enter All Information!");
                            $courseDurationInput.focus();
                            return false;
                        }
                        if (!$courseDateInput.val()) {
                            alert("Enter All Information!");
                            $courseDateInput.focus();
                            return false;
                        }
                        if (!$courseHoursInput.val()) {
                            alert("Enter All Information!");
                            $courseHoursInput.focus();
                            return false;
                        }
                        if (!$courseTrainerInput.val()) {
                            alert("Enter All Information!");
                            $courseTrainerInput.focus();
                            return false;
                        }
                        if (!$courseManagerInput.val()) {
                            alert("Enter All Information!");
                            $courseManagerInput.focus();
                            return false;
                        }
                        if (!$courseFacilitatorInput.val()) {
                            alert("Enter All Information!");
                            $courseFacilitatorInput.focus();
                            return false;
                        }
                        return true;
                    });
                });
            })();
    </script>

</body>

</html>